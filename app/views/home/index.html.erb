<div id="home-info">
  <div id="home-title">
    Share photos with your close friends
  </div>
  <div id="home-subtitle">
    Photo makes your friendship well.
  </div>
  <div id="sign-in-link">
    <%= link_to image_tag('btn_fb.png'), "/auth/facebook" %>
  </div>
</div>

<% if current_user %>
  <div id="friends">
    <p><%= link_to "Invite your facebook friends", "#", :id => "invite_fb_friends" %></p>

  <div id="fb-root"></div>

  <script src="http://connect.facebook.net/en_US/all.js"></script>

  <script>
    $(function(){

      $("a#invite_fb_friends").click(function() {
        FB.init({
          appId:'194908573983646',
          cookie:false,
          status:true
        });

        FB.ui({ method: 'apprequests', message: '<%= current_user.name %> thank you are really Awesome.'});
      });	
    });
  </script>
<% end %>
