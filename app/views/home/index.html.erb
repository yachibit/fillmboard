<h2>Welcome to fillmboard</h2>

<% if current_user %>
  <div id="friends">
    <p><%= link_to "Invite your facebook friends", "#", :id => "invite_fb_friends" %></p>

  <div id="fb-root"></div>

  <script src="http://connect.facebook.net/en_US/all.js"></script>

  <script>
    $(function(){

      $("a#invite_fb_friends").click(function() {
        FB.init({
          appId:'194908573983646',
          cookie:false,
          status:true
        });

        FB.ui({ method: 'apprequests', message: '<%= current_user.name %> thank you are really Awesome.'});
      });	
    });
  </script>
<% end %>
