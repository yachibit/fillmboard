<h1>Listing invites</h1>

<table>
  <tr>
    <th>Adress</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% if current_user %>
  <div id="friends">
  <p><%= link_to "Invite your facebook friends", "#", :id => "invite_fb_friends" %></p>

  <div id="fb-root"></div>

  <script src="http://connect.facebook.net/en_US/all.js"></script>

  <script>
    $(function(){

      $("a#invite_fb_friends").click(function() {
        FB.init({
          appId:'194908573983646',
          cookie:false,
          status:true
        });

        FB.ui({ method: 'apprequests', message: 'thank you are really Awesome.'});
      }); 
    });
  </script>
<% end %>

<% @invites.each do |invite| %>
  <tr>
    <td><%= invite.adress %></td>
    <td><%= link_to 'Show', invite %></td>
    <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
    <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'New Invite', new_invite_path %>
