<!DOCTYPE html>
<html>
  <head>
    <title>Fillmboard</title>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
  </head>
  <% if current_user %>
    <body>
  <% else %>
    <body class="home-body">
  <% end %>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">fillmboard</a>
          <div class="nav-collapse">
          <% if current_user %>
            <ul class="nav">
              <li><%= link_to "グループ", user_groups_path(current_user.id) %></li>
              <li><%= link_to "お知らせ" %></li>
            </ul>
            <div id="user-links">
              <% if current_user %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= image_tag current_user.picture, :width => '30px' %>
                    <%= current_user.name %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to "個人ページを見る", current_user %>
                    </li>
                    <li>
                      <%= link_to "個人設定" , edit_user_path(current_user.id) %>
                    </li>
                    <li>
                      <%= link_to "Sign out", signout_path %>
                    </li>
                  </ul>
                </li>
              <% end %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>
      <div class="row">
        <div class="span12"><%= yield %></div>
      </div>
    </div>
  </body>
</html>
